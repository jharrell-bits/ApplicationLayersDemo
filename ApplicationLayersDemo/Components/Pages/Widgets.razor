@page "/widgets"
@rendermode InteractiveServer

<div class="text-center">
    <h1 class="display-4">Widgets</h1>
</div>

<div>
    <table class="table">
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">Cost</th>
            <th scope="col"></th>
        </tr>
        @foreach (var widget in Data)
        {
            <tr>
                <td>@widget.Id</td>
                <td>@widget.Name</td>
                <td>@widget.Description</td>
                <td>@widget.Cost</td>
                <td>
                    <div class="text-end">
                        <button type="button" class="btn btn-secondary me-2" @onclick="@(() => MoveWidgetDown(widget.Id))">
                            <i class="bi bi-caret-down-fill h3"></i>
                        </button>
                        <button type="button" class="btn btn-secondary me-2" @onclick="@(() => MoveWidgetUp(widget.Id))">
                            <i class="bi bi-caret-up-fill h3"></i>
                        </button>
                    </div>
                </td>
            </tr>
        }
    </table>
</div>
